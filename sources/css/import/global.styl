body
	font-family 'Proxima', 'Helvetica Neue', 'Arial', sans-serif
	min-height 100%
	height 100%
	color black

.wrap 
	full-width()
	min-height: 100%
	padding-bottom 65px
	margin-bottom: -65px
	&:after
		content ""
		display block
	
	background-repeat no-repeat
	background-position center center

html
	height 100%

article
	position relative
	z-index 10

.toolbar
	.logo
		@media (min-width: scr_md)
			margin-left 0px
		svg
			@media (min-width: scr_sm)
				max-width 80%
			@media (min-width: scr_lg)
				max-width 220px
	.nav
		&__item
			@media (min-width: scr_sm)
				font-size 14px
				padding 3px 11.2px 0
			@media (min-width: scr_lg)
				font-size 16px
				padding 3px 17.4px 0	

.modal
	padding 0
.modal-dialog
	width 100%
	margin 0
	min-height 100%
	@media (min-width: scr_md)
		min-height none
		margin: 30px auto;
		width 770px
		iframe
			height (648*.562)px
	@media (min-width: scr_lg)
		width 980px
		iframe
			height (900*.562)px

	#Feedback &
		max-width 600px

.modal-content
	full-width()
	border-radius 0
	background black
	.date
		font-weight bold
		color blue
	.divider
		full-width()
		border-bottom 1px solid black
		margin 15px 0 20px
	.text
		min-height 200px
	iframe
		max-width 90%
		margin 15px 5%
		max-height 50%
		@media (min-width: scr_md)
			margin 0
			max-height none
			max-width 100%
	min-height 100%
	@media (min-width: scr_md)
		min-height none
		padding 50px 60px
		border 1px solid blue
	&--white
		background white
		border 0
		padding 30px 20px
		@media (min-width: scr_md)
			padding 30px 40px
		color black !important
		p
			font-size 14px
			line-height 17px
			margin-bottom 18px
			@media (min-width: scr_md)
				font-size 16px
				line-height 20px
		h1
			margin-top 10px
			font-weight bold
			font-size 25px
			margin-bottom: 25px
			@media (min-width: scr_md)
				font-size 30px
	.close
		opacity 1
		position absolute
		z-index 30000000
		right 10px
		top -5px
		svg
			max-width 30px
			path
				fill blue
		@media (min-width: scr_md)
			right -100px
			svg
				max-width none
	img
		max-width 100%
.modal-backdrop.in
	opacity .99
	@media (min-width: scr_md)
		opacity .8

.no-mobile
	display none
	@media (min-width: scr_sm)
		display block

