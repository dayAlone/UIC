				max-width 100%
				border-top 0
				padding-top 5px
			&--open
				margin-bottom 0
				> .directions-list__trigger
					background lightness(#64798f, 60%)
					svg
						transform rotate(90deg)
						
			> .directions-list__trigger
				background #64798f
				position relative
				t(background)
				color white
				padding-left 50px
				padding-right 25px
				font-size 15px
				svg
					left 15px
					path
						fill white
				&:hover
					color white
					background lightness(#64798f, 60%)
					svg path
						fill white
		&__item
			background #e2e8ed
			full-width()
			padding-left 50px
			margin-bottom 8px
			t(min-height, background)
			&--open
				background #f8f9fa
				.directions-list__trigger
					color blue
					svg
						transform rotate(90deg)
						path
							fill blue
		&__trigger
			full-width()
			position relative
			font-size 20px
			line-height 22px
			color black
			padding 22px 0 15px
			svg
				position absolute
				left -35px
				top 18px
				t(transform)
				path
					t(fill)
					fill #8797a2
			&:hover
				color blue
				svg
					path
						fill blue
		&__content
			display block
			border-top 1px solid #d6d7da
			padding 25px 0
			max-width 95%
			full-width()
			display none
			
		&__value + .directions-list__application
			margin-top 62px
		&__application
			&:hover
				color blue
				svg path
					fill blue
			svg
				max-width 40px
				path
					t(fill)
					fill #2f4458
					
		&__divider
			full-width()
			float right
			width 83.333333333%
			margin 15px 0 25px (100/12)*2%
			padding-left 4px
			&--small
				width 100%
				margin 10px 0 20px
				padding 0
			&--top
				margin-top -10px
				margin-bottom 30px
			span
				full-width()
				border-bottom 1px solid #d6d7da
		.row + &__section-title
			margin-top 10px
			padding-top 23px
			border-top 1px solid #d6d7da
		&__description
			full-width()
			margin-top -4px
		&__section-title
			font-size 14px
			font-weight: bold
			full-width()
			border-bottom 1px solid black
			padding 0px 0 8px
			margin-bottom 15px
		&__label, &__application
			text-transform: uppercase
			full-width()
			color #8797a2
			font-weight: bold
			font-size 10px
			margin-bottom 7px
		&__label--black
			color black
		&__value
			font-size 20px

